#!/bin/bash
clear
GRB="\e[92;1m"
NCO='\033[0m'
RED='\033[0;31m'

IPX=$(curl -s ipv4.icanhazip.com)
DOM=$(cat /etc/xray/domain)

if [[ $nginx == "running" ]]; then
    status_server="${GRB}[ON]${NCO}"
else
    status_server="${RED}[OFF]${NCO}"
fi
echo -e "=============================================="
echo -e " ${NCO}Ip / Host   : ${GRB}$IPX / $DOM"
echo -e " ${NCO}X-ray Status  ${GRB}$status_server ========== t.me/axsystem"
echo -e "=============================================="
